<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet для создания таблицы Animal -->
    <changeSet id="001-create-animal-table" author="n.surzhikov">
        <createTable tableName="animal">
            <column name="animal_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="animal_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="animal_age" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="photo_pass" type="VARCHAR(255)"/>
            <column name="owner_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <!-- ChangeSet для создания таблицы Person -->
    <changeSet id="002-create-person-table" author="n.surzhikov">
        <createTable tableName="person">
            <column name="person_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="chat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)"/>
            <column name="owner_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <!-- ChangeSet для создания таблицы Report -->
    <changeSet id="003-create-report-table" author="n.surzhikov">
        <createTable tableName="report">
            <column name="report_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="photo" type="BYTEA">
                <constraints nullable="false" />
            </column>
            <column name="food" type="VARCHAR(255)"/>
            <column name="health" type="VARCHAR(255)"/>
            <column name="changes" type="VARCHAR(255)"/>
            <column name="approval" type="BOOLEAN"/>
            <column name="owner_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <!-- ChangeSet для создания таблицы Owner -->
    <changeSet id="004-create-owner-table" author="n.surzhikov">
        <createTable tableName="owner">
            <column name="owner_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="chat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="animal_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="report_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="count_approved_report" type="INT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>