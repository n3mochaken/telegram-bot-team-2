<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet для добавления внешних ключей -->
    <changeSet id="004-add-foreign-keys" author="n.surzhikov">
        <addForeignKeyConstraint baseTableName="animal"
                                 baseColumnNames="person_id"
                                 constraintName="fk_animal_person"
                                 referencedTableName="person"
                                 referencedColumnNames="person_id"/>
        <addForeignKeyConstraint baseTableName="person"
                                 baseColumnNames="animal_id"
                                 constraintName="fk_person_animal"
                                 referencedTableName="animal"
                                 referencedColumnNames="animal_id"/>

    </changeSet>
</databaseChangeLog>