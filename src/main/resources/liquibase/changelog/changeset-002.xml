<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet для создания внешних ключей -->
    <changeSet id="005-add-foreign-keys" author="n.surzhikov">
        <addForeignKeyConstraint baseTableName="animal"
                                 baseColumnNames="owner_id"
                                 constraintName="fk_animal_owner"
                                 referencedTableName="owner"
                                 referencedColumnNames="owner_id"/>

        <addForeignKeyConstraint baseTableName="person"
                                 baseColumnNames="owner_id"
                                 constraintName="fk_person_owner"
                                 referencedTableName="owner"
                                 referencedColumnNames="owner_id"/>

        <addForeignKeyConstraint baseTableName="owner"
                                 baseColumnNames="chat_id"
                                 constraintName="fk_owner_person"
                                 referencedTableName="person"
                                 referencedColumnNames="person_id"/>

        <addForeignKeyConstraint baseTableName="owner"
                                 baseColumnNames="animal_id"
                                 constraintName="fk_owner_animal"
                                 referencedTableName="animal"
                                 referencedColumnNames="animal_id"/>

        <addForeignKeyConstraint baseTableName="report"
                                 baseColumnNames="owner_id"
                                 constraintName="fk_report_owner"
                                 referencedTableName="owner"
                                 referencedColumnNames="owner_id" />
    </changeSet>
</databaseChangeLog>


